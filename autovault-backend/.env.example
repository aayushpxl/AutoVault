# MongoDB connection URI
MONGODB_URI=mongodb://localhost:27017/Gadi_Khoj_db
MONGODB_URI_TEST=mongodb://localhost:27017/Gadi_Khoj_db_test

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Secret (CHANGE THIS IN PRODUCTION!)
SECRET=your-super-secret-jwt-key-here

# Email Configuration
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password-here

# Frontend URL
CLIENT_URL=http://localhost:5173

# ============ SECURITY CONFIGURATION ============

# CORS allowed origins (comma-separated)
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Google reCAPTCHA v3
# Get your keys from: https://www.google.com/recaptcha/admin
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key-here

# Google OAuth 2.0 (Optional)
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# JWT Cookie Settings
JWT_COOKIE_EXPIRES_IN=7
COOKIE_SECURE=false

# SSL Certificate paths (for HTTPS in production)
SSL_KEY_PATH=./ssl/key.pem
SSL_CERT_PATH=./ssl/cert.pem
